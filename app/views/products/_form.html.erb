
<%= form_group_for( f, :category_id , label: false )  do %>
    <label>Category</label>
    <%= f.select(:category_id , @categories.map{|category| [category.name , category.id]} , {} , :class => "form-control") %>
<% end %>

<%= form_group_for( f, :name , label: false )  do %>
        <label>Product Name</label>
        <%= f.text_field(:name , :class => "form-control") %>
<% end %>  

<%= form_group_for( f, :description , label: false )  do %>
    <label>Product Description</label>
    <%= f.text_area(:description , :size => "30x10"  , :class => "form-control") %>
<% end %>

<%= form_group_for( f, :image , label: false )  do %>
    <label>Product Image</label>
    <%= f.file_field(:image , :class => "form-control") %><br>
<% end %>
